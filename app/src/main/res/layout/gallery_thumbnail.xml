<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/decor_image"
            android:scaleType="fitXY"
             />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/thumbnail"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/line"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/download_image"
            android:src="@drawable/ic_baseline_arrow_downward_24px"
            android:textColor="@android:color/black"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/line"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/like_image"
            android:src="@drawable/loveempty"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-18dp"
            android:layout_toEndOf="@+id/like"
            android:text="@string/zero"
            android:layout_marginBottom="5dp"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>